#!/bin/bash

module load DEVELOP
module load MISC
module load matlab/2019a

source ~/.zshrc.local
exppath="${LAMP_EXPERIMENTS}/matlab"

export MKL_NUM_THREADS=1
export OMP_NUM_THREADS=1

export MATLAB_LOG_DIR=.
export MATLABPATH=$exppath
export LAMP_matlab_results=results/

cd $exppath

# it is not possible to run runner.m directly here because of how importing in Matlab works.
/usr/local_rwth/sw/MATLAB/matlab_2019a/bin/matlab -singleCompThread -nodisplay -nodesktop -nosplash -logfile /dev/null <<EOF
addpath('${exppath}');
main;
quit();
EOF
